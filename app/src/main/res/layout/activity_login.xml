<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_DNI"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.296"
        android:layout_marginTop="36dp" android:id="@+id/tvDNI" android:textColor="@color/colorRedDark"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_DNI"
        app:layout_constraintStart_toStartOf="@+id/tvDNI"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvDNI"/>
    <TextView
        android:text="@string/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_DependentName"
        app:layout_constraintStart_toStartOf="@+id/et_DependentName"
        android:textColor="@color/colorRedDark" android:textSize="18sp"/>
    <TextView
        android:text="@string/tv_dependent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDependentName" app:layout_constraintStart_toStartOf="@+id/et_DNI"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_DNI" android:textColor="@color/colorRedDark"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_DependentName"
        app:layout_constraintStart_toStartOf="@+id/tvDependentName"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvDependentName"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_email" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        app:layout_constraintStart_toStartOf="@+id/tvEmail"/>
    <TextView
        android:text="@string/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNumber" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email" app:layout_constraintStart_toStartOf="@+id/et_email"
        android:textColor="@color/colorRedDark" android:textSize="18sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_number"
        app:layout_constraintStart_toStartOf="@+id/tvNumber"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvNumber"/>
    <Button
        android:text="@string/bt_register"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_register" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginBottom="48dp" app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/background_light"
        android:background="@color/colorRedDark" android:textSize="24sp"
        android:onClick="clickEvent"
        />


</android.support.constraint.ConstraintLayout>